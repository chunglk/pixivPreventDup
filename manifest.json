{
  "name": "Pixiv Prevent Duplicate",
  "description": "Prevents duplicate submissions on Pixiv",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/main.html",
    "default_icon": "hello_extensions.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.pixiv.net/*"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "contextMenus",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "*://www.pixiv.net/*",
    "*://www.pixivision.net/*",
    "*://*.pximg.net/*",
    "*://*.pixiv.cat/*"
  ]
}